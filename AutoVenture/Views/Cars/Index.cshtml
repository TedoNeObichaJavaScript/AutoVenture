            <p class="text-sm font-semibold mb-2">Price: $70/day</p>
            <button onclick="openModal('BMW 3 Series', 3)" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Rent</button>
        </div>

        <!-- Audi A4 -->
        <div class="bg-white p-4 rounded-xl shadow hover:shadow-lg transition">
            <img src="@Url.Content("~/carsphoto/audi.png")" class="rounded-md mb-3 w-full h-40 object-cover" alt="Audi A4" />
