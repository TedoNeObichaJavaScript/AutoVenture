@{
    ViewData["Title"] = "Cars";
}

<section class="max-w-6xl mx-auto p-6">
    <h2 class="text-3xl font-semibold mb-6 text-center">Car Catalog</h2>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">

        <!-- Mazda MX-5 -->
