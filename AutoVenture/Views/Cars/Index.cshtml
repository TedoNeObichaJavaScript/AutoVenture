        </div>

    </div>
</section>

<!-- Modal Rent Form -->
<div id="modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden z-50">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
        <h2 id="modal-title" class="text-xl font-bold mb-4 text-blue-700">Rent Car</h2>
        <form id="rent-form">
            <input type="hidden" name="CarId" id="car-id" />

            <div class="mb-3">
                <label for="customer-name" class="block font-semibold">Your Name</label>
                <input type="text" name="CustomerName" id="customer-name" class="w-full border rounded px-3 py-2 mt-1" required />
            </div>

            <div class="mb-3">
                <label for="rental-date" class="block font-semibold">Rental Date</label>
                <input type="date" name="RentalDate" id="rental-date" class="w-full border rounded px-3 py-2 mt-1" required />
            </div>

            <div class="flex justify-end gap-2 mt-4">
                <button type="button" onclick="closeModal()" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Cancel</button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Confirm</button>
            </div>

            <p id="success-message" class="text-green-600 mt-4 hidden">Thank you for renting our car!</p>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const modal = document.getElementById("modal");
        const rentForm = document.getElementById("rent-form");
        const modalTitle = document.getElementById("modal-title");
        const carIdField = document.getElementById("car-id");
        const message = document.getElementById("success-message");

        function openModal(carName, carId) {
            modalTitle.textContent = "Rent " + carName;
            carIdField.value = carId;
            message.classList.add("hidden");
            modal.classList.remove("hidden");
        }

        function closeModal() {
            modal.classList.add("hidden");
            rentForm.reset();
        }

        rentForm.addEventListener("submit", function (e) {
            e.preventDefault();

            const data = {
                CarId: document.getElementById("car-id").value,
                CustomerName: document.getElementById("customer-name").value,
                RentalDate: document.getElementById("rental-date").value
            };

            fetch("/Rentals/Create", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(data)
            })
                .then(res => {
                    if (res.ok) {
                        rentForm.reset();
                        message.classList.remove("hidden");
                    } else {
                        alert("Error submitting rental. Try again.");
                    }
                })
                .catch(() => alert("Unexpected error occurred."));
        });
    </script>
}
