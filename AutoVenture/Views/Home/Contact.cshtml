@model AutoVenture.Models.ContactViewModel

@{
    ViewData["Title"] = "Свържи се с нас";
}

<section class="max-w-5xl mx-auto py-12 px-6">
    <h1 class="text-3xl font-bold mb-6 text-center">Свържи се с нас</h1>

    @if (ViewBag.Message != null)
    {
        <div class="bg-green-100 text-green-800 p-4 rounded mb-4 text-center">
            @ViewBag.Message
        </div>
    }

    <div class="grid gap-8 md:grid-cols-2 mb-12">
        <!-- Contact Details -->
        <div class="space-y-4">
            <p><strong>📍 Адрес:</strong> Tursete Tedo ot Karnobat</p>
            <p><strong>📞 Телефон:</strong> <a href="tel:+359888123456" class="text-blue-600 hover:underline">Nomer nqma :D</a></p>
            <p><strong>✉️ Имейл:</strong> <a href="mailto:info@AutoVenture.bg" class="text-blue-600 hover:underline">nqkuvemail@gmail.com</a></p>
        </div>

        <!-- Contact Form -->
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div>
                <label class="block font-medium">Вашето име</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "w-full border p-2 rounded", required = "required" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>

            <div>
                <label class="block font-medium">Имейл адрес</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "w-full border p-2 rounded", required = "required", type = "email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div>
                <label class="block font-medium">Съобщение</label>
                @Html.TextAreaFor(m => m.Message, new { @class = "w-full border p-2 rounded", required = "required", rows = "5" })
                @Html.ValidationMessageFor(m => m.Message)
            </div>

            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Изпрати</button>
        }
    </div>

    <!-- Optional Map -->
    <div class="aspect-w-16 aspect-h-9">
        <iframe class="w-full h-72 rounded-xl" src="https://maps.google.com/maps?q=Карнобат&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" allowfullscreen></iframe>
    </div>
</section>
